{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "isolatedModules": true
  },
  "include": ["src/**/*", "src/__tests__/app.test.ts", "src/__tests__/auth.test.ts", "src/__tests__/brain-use.test.ts", "src/__tests__/content.test3.ts1", "src/__tests__/elastic.test.ts"],
  "exclude": ["node_modules", "dist", "**/*.config.*", "**/.eslintrc.*"]
}

